# MongoDB Configuration
MONGO_URI=your_mongodb_connection_string

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# TiDB Cloud Configuration (Add this to your .env file)
TIDB_CONNECTION_STRING=mysql://username:password@host:port/database?ssl={"rejectUnauthorized":false}

# Alternative: Generic MySQL Connection String
MYSQL_CONNECTION_STRING=mysql://username:password@host:port/database

# Server Configuration
PORT=8000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173

# Production Frontend URL (for CORS)
FRONTEND_URL=https://peerconnect-1.onrender.com

# Optional: Judge0 for code execution
JUDGE0_URL=
JUDGE0_KEY=
